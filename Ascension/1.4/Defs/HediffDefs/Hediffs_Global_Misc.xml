  <HediffDef>
    <defName>SpiritSwordFusion</defName>
    <label>Spirit Sword Fusion</label>
    <description>This being has fused with a Spirit Sword, granting them use to its astral form's abilities.</description>
    <hediffClass>HediffWithComps</hediffClass>
	<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_MessageAfterTicks">
        <ticks>1</ticks>
